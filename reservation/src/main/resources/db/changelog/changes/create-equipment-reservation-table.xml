<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6" author="Artiom">
        <createTable tableName="equipment_reservation">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="equipment_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_equipment_reservation_equipment_id"
                             references="equipment(id)"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_equipment_reservation_user_id"
                             references="user(id)"/>
            </column>
            <column name="reserved_from" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="reserved_to" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="deleted_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="reservation_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>